#include <stdio.h>

int main() {
    int t1, t2, t3;
    double t;

    // Введення значень
    printf("Введіть три значення\n");
    scanf("%d %d %d", &t1, &t2, &t3);
    
     // Перевірка, чи введені значення перевищують 10000
        if (t1 > 10000 || t2 > 10000 || t3 > 10000) {
        printf("Значення не повинні перевищувати 10000.\n");
        return 1;
    }

    // Обчислення часу
    t = 1.0 / t1 + 1.0 / t2 + 1.0 / t3;
    t = 1.0 / t;

    // Виведення результату, округленого до сотої
    printf("Час, необхідний для з'їдання пирога: %.2lf\n", t);

    return 0;
}
